---
interface Props {
  description: string;
  videoid: string;
}

const { description , videoid } = Astro.props;
---

<div class={`flex flex-col items-center gap-3 pb-14 px-6 rounded-lg`}>
  <lite-youtube 
    videoid={videoid}
    videoDescription={description}
    class="w-[250px] h-[150px] rounded-lg"
  ></lite-youtube>
  <h2 class="text-slate-300/85 text-center font-semibold text-sm z-30">{description}</h2>
</div>
